
" shortcuts for swiching the buffers
map <C-L> :bnext<CR>
map <C-K> :bprev<CR>

" open split buffers
map <Leader>v <C-W>v
map <Leader>s <C-W>s

" close buffer
map <Leader>d :bd!<CR>

" show buffers
map <Leader>b :Buffers<CR>

" move into buffers
map <C-h> <C-W>h
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-l> <C-W>l
